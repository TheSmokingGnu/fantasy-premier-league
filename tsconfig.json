{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "declaration": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "outDir": "js"
    },
    "exclude": [
        "src/**/*.test.ts",
        "node_modules/@types/jest"
    ],
    "include": [
        "src/**/*"
    ]
}